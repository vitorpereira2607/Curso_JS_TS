<%- include('../includes/head'); %>
  <%- include('../includes/nav'); %>

    <div class="container">
      <div class="row">
        <div class="class col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Login</h1>
          <p class="text-center lead">Digite as suas informações</p>

          <%- include('../includes/messages'); %>

        </div>
      </div>

      <div class="row">
        <div class="col-lg">
          <h4>Iniciar sessão</h4>
          <p>Novo utilizador? <a href="/register/index">Criar conta</a></p>
        </div>

        <form action="/login/login" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name='email' placeholder="Email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" placeholder="Palavra-Passe"
              style="margin-bottom: 10px;">
          </div>
          <button type="submit" class="btn btn-primary">Iniciar sessão</button>
        </form>
      </div>
    </div>



    <%- include('../includes/footer') %>