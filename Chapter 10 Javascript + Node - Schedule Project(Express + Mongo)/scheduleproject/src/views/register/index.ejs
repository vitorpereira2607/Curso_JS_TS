<%- include('../includes/head'); %>
<%- include('../includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="class col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta</h1>
      <p class="text-center lead">Crie a sua conta preenchendo as informações abaixo.</p>

      <%- include('../includes/messages'); %>

    </div>
  </div>

  <div class="row">
    <div class="col-lg">
      <h4>Criar conta</h4>
      <p>Já tens uma conta? <a href="/login/index">Login</a></p>
    </div>

    <form action="/login/register" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="form-group">
        <label>Utilizador</label>
        <input type="text" class="form-control" name='username' placeholder="Utilizador">
      </div>
      <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name='email' placeholder="Email">
      </div>
      <div class="form-group">
        <label>Palavra-Passe</label>
        <input type="password" class="form-control" name="password" placeholder="Palavra-Passe" style="margin-bottom: 10px;">
      </div>
      <button type="submit" class="btn btn-primary">Criar conta</button>
    </form>
  </div>


<%- include('../includes/footer') %>